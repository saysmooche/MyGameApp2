<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/redBlock"
        android:layout_width="102dp"
        android:layout_height="71dp"
        android:layout_above="@+id/anchor"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="203dp"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginBottom="92dp"
        android:layout_toStartOf="@+id/anchor"
        android:layout_toLeftOf="@+id/anchor"
        android:background="@drawable/candy7" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/androidBlock"
        android:layout_width="101dp"
        android:layout_height="76dp"
        android:layout_above="@+id/anchor"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="36dp"
        android:layout_toEndOf="@+id/anchor"
        android:layout_toRightOf="@+id/anchor"
        android:src="@drawable/candy6"
        android:transitionName="switchAndroid" />

    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/yellowBlock"
        android:layout_width="78dp"
        android:layout_height="111dp"
        android:layout_below="@+id/anchor"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/anchor"
        android:layout_toRightOf="@+id/anchor"
        android:background="@drawable/candy3" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/blueBlock"
        android:layout_width="88dp"
        android:layout_height="113dp"
        android:layout_above="@+id/anchor"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="-94dp"
        android:layout_marginEnd="82dp"
        android:layout_marginRight="82dp"
        android:layout_marginBottom="253dp"
        android:layout_toStartOf="@+id/anchor"
        android:layout_toLeftOf="@+id/anchor"
        android:background="@drawable/candy5"
        android:transitionName="switchBlue" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView2"
        android:layout_width="134dp"
        android:layout_height="101dp"
        android:layout_alignTop="@+id/yellowBlock"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="146dp"
        android:background="@drawable/candy11"
        android:onClick="getVortex1"
        android:clickable="true" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView3"
        android:layout_width="179dp"
        android:layout_height="217dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="214dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/candy4" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView4"
        android:layout_width="129dp"
        android:layout_height="92dp"
        android:layout_above="@+id/androidBlock"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="176dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="51dp"
        android:background="@drawable/candy12" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="190dp"
        android:layout_marginBottom="49dp"
        android:elevation="8dp"
        android:shadowColor="@color/colorAccent"
        android:text="@string/choose_a"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="169dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/choosecandy" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView11"
        android:layout_width="149dp"
        android:layout_height="131dp"
        android:layout_above="@+id/imageView3"
        android:layout_alignEnd="@+id/anchor"
        android:layout_alignParentTop="true"
        android:layout_marginTop="318dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/candy14"
        android:onClick="getVortex1" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="202dp"
        android:layout_height="112dp"
        android:layout_above="@+id/yellowBlock"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="270dp"
        android:layout_toEndOf="@+id/redBlock"
        android:onClick="getVortex2"
        app:srcCompat="@drawable/candy13" />

</RelativeLayout>