<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/redBlock"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_above="@+id/anchor"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_toStartOf="@+id/anchor"
        android:layout_toLeftOf="@+id/anchor"
        android:background="@drawable/flower3" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/androidBlock"
        android:layout_width="130dp"
        android:layout_height="111dp"
        android:layout_above="@+id/anchor"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-15dp"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="-79dp"
        android:layout_toEndOf="@+id/anchor"
        android:layout_toRightOf="@+id/anchor"
        android:src="@drawable/flower1"
        android:transitionName="switchAndroid" />

    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/yellowBlock"
        android:layout_width="78dp"
        android:layout_height="111dp"
        android:layout_above="@+id/imageView2"
        android:layout_below="@+id/anchor"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@+id/anchor"
        android:layout_toRightOf="@+id/anchor"
        android:background="@drawable/flower" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/blueBlock"
        android:layout_width="139dp"
        android:layout_height="152dp"
        android:layout_below="@+id/anchor"
        android:layout_alignBottom="@+id/anchor"
        android:layout_alignParentStart="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="-23dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="-129dp"
        android:layout_toStartOf="@+id/anchor"
        android:layout_toLeftOf="@+id/anchor"
        android:background="@drawable/flower2"
        android:onClick="getVortex2"
        android:transitionName="switchBlue" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView2"
        android:layout_width="82dp"
        android:layout_height="65dp"
        android:layout_below="@+id/androidBlock"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="115dp"
        android:layout_toEndOf="@+id/blueBlock"
        android:background="@drawable/flower6"
        android:clickable="true" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView3"
        android:layout_width="193dp"
        android:layout_height="128dp"
        android:layout_below="@+id/yellowBlock"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="105dp"
        android:background="@drawable/flower5"
        android:clickable="true" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView4"
        android:layout_width="130dp"
        android:layout_height="164dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="137dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="468dp"
        android:background="@drawable/flower3"
        android:onClick="getVortex1"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="81dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="37dp"
        android:elevation="8dp"
        android:text="Choose a Flower"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:visibility="visible" />

</RelativeLayout>