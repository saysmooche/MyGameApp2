<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/redBlock"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:layout_above="@+id/anchor"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_toStartOf="@+id/anchor"
        android:layout_toLeftOf="@+id/anchor"
        android:background="@drawable/bear1" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/androidBlock"
        android:layout_width="101dp"
        android:layout_height="76dp"
        android:layout_above="@+id/anchor"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/anchor"
        android:layout_toRightOf="@+id/anchor"
        android:src="@drawable/bear6"
        android:transitionName="switchAndroid" />

    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/yellowBlock"
        android:layout_width="78dp"
        android:layout_height="111dp"
        android:layout_above="@+id/imageView2"
        android:layout_below="@+id/anchor"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="-3dp"
        android:layout_toEndOf="@+id/anchor"
        android:layout_toRightOf="@+id/anchor"
        android:background="@drawable/bear7" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/blueBlock"
        android:layout_width="88dp"
        android:layout_height="113dp"
        android:layout_below="@+id/anchor"
        android:layout_alignParentStart="true"
        android:layout_marginStart="102dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_toStartOf="@+id/anchor"
        android:layout_toLeftOf="@+id/anchor"
        android:background="@drawable/bear2"
        android:transitionName="switchBlue" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView2"
        android:layout_width="114dp"
        android:layout_height="126dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="115dp"
        android:onClick="getVortex1"
        android:background="@drawable/bear4" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView3"
        android:layout_width="155dp"
        android:layout_height="163dp"
        android:layout_below="@+id/blueBlock"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-7dp"
        android:layout_marginEnd="256dp"
        android:layout_marginBottom="64dp"
        android:onClick="getVortex2"
        android:background="@drawable/bear3" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="105dp"
        android:layout_above="@+id/androidBlock"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="207dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="24dp"
        android:onClick="getVortex1"
        android:background="@drawable/bear8" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="149dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="27dp"
        android:elevation="8dp"
        android:text="Choose a Bear"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_above="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="294dp"
        android:layout_marginBottom="225dp"
        app:srcCompat="@drawable/bear5" />

</RelativeLayout>